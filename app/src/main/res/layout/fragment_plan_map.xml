<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.maps.PlanMapFragment">

    <data>
        <variable
            name="model"
            type="com.example.journey_dp.ui.viewmodel.MapViewModel" />

        <variable
            name="viewmodel"
            type="com.example.journey_dp.ui.viewmodel.ProfileViewModel" />
        <import type="android.view.View"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/search_wrapper"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="@dimen/spacing_middle"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_large"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp"
            android:clipToPadding="false"
            app:cardUseCompatPadding="false"
            app:layout_collapseMode="parallax"
            android:visibility="visible"
            >

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/autocomplete_fragment"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                android:src="@color/places_autocomplete_search_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp"
                app:iconifiedByDefault="true"
                app:queryHint="Search Here" />

        </androidx.cardview.widget.CardView>



        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/google_map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        <FrameLayout
            android:id="@+id/bottom_sheet_behavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:background="@drawable/rounded"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_remove_24"
                android:scaleType="centerCrop"
                android:layout_gravity="center|top"
                android:contentDescription="@string/holder_bottom_sheet" />

            <LinearLayout
                android:id="@+id/layout_for_add_station"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_mxlarge"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/spacing_mlarge"
                android:layout_marginRight="@dimen/spacing_mlarge"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:src="@drawable/ic_baseline_my_location_24"
                    android:contentDescription="@string/my_location_icon" />

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="-33dp"
                    android:background="@drawable/ic_baseline_more_vert_24" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/my_location_label"
                    android:layout_width="165dp"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:visibility="visible"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/my_location_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/destination"
                        android:textColorHint="#757575"

                        />
                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/add_destination"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="@dimen/spacing_xmedium"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:visibility="gone"
                    android:background="@drawable/ic_baseline_add_circle_24"
                    android:contentDescription="@string/add_input" />

                <Button
                    android:id="@+id/start_plan_journey"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="@dimen/spacing_xmedium"
                    android:visibility="visible"
                    android:background="@drawable/ic_baseline_directions_24"
                    android:contentDescription="@string/add_input" />

                <Button
                    android:id="@+id/find_user_location"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:visibility="visible"
                    android:background="@drawable/ic_baseline_near_me_24"
                    android:contentDescription="@string/add_input" />

            </LinearLayout>




            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/plan_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:nestedScrollingEnabled="true"
                android:visibility="gone"
                tools:context=".ui.fragments.maps.PlanMapFragment">

                <ScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/inputs_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="LinearLayoutManager"
                        tools:itemCount="4"
                        tools:listitem="@layout/destination_item" />
                </ScrollView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/finish_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/finish_plan"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/scrollView"
                    app:layout_constraintVertical_bias="0.0" />

                <LinearLayout
                    android:id="@+id/information_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/finish_button"
                    app:layout_constraintVertical_bias="0.0"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/totalDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:text="@string/test_total_distance_500_km"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/totalDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:text="@string/test_total_duration_25_h"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/material_divider"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    app:dividerColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/information_layout"
                    app:layout_constraintVertical_bias="0.0" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_directions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:chipSpacingHorizontal="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/material_divider"
                    app:selectionRequired="true"
                    app:singleLine="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/car_directions_icon"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:checkable="true"
                        android:checked="true"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:tag="@string/car"
                        app:checkedIcon="@drawable/ic_baseline_directions_car_24"
                        app:checkedIconTint="@color/green"
                        app:checkedIconVisible="true"
                        app:chipIcon="@drawable/ic_baseline_directions_car_24"
                        app:chipIconSize="30dp"
                        app:chipIconTint="@color/black"
                        app:chipIconVisible="true"
                        app:iconEndPadding="10dp"
                        app:iconStartPadding="10dp" />


                    <com.google.android.material.chip.Chip
                        android:id="@+id/bus_directions_icon"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:checkable="true"
                        android:checked="false"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:tag="@string/bus"
                        app:checkedIcon="@drawable/ic_baseline_directions_bus_24"
                        app:checkedIconTint="@color/purple_700"
                        app:checkedIconVisible="true"
                        app:chipIcon="@drawable/ic_baseline_directions_bus_24"
                        app:chipIconSize="30dp"
                        app:chipIconTint="@color/black"
                        app:chipIconVisible="true"
                        app:iconEndPadding="10dp"
                        app:iconStartPadding="10dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/train_directions_icon"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:checkable="true"
                        android:checked="false"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:tag="@string/train"
                        app:checkedIcon="@drawable/ic_baseline_directions_transit_filled_24"
                        app:checkedIconTint="@color/green"
                        app:checkedIconVisible="true"
                        app:chipIcon="@drawable/ic_baseline_directions_transit_filled_24"
                        app:chipIconSize="30dp"
                        app:chipIconTint="@color/black"
                        app:chipIconVisible="true"
                        app:iconEndPadding="10dp"
                        app:iconStartPadding="10dp" />


                    <com.google.android.material.chip.Chip
                        android:id="@+id/walk_directions_icon"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:checkable="true"
                        android:checked="false"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:tag="@string/walk"
                        app:checkedIcon="@drawable/ic_baseline_directions_walk_24"
                        app:checkedIconTint="@color/green"
                        app:checkedIconVisible="true"
                        app:chipIcon="@drawable/ic_baseline_directions_walk_24"
                        app:chipIconSize="30dp"
                        app:chipIconTint="@color/black"
                        app:chipIconVisible="true"
                        app:iconEndPadding="10dp"
                        app:iconStartPadding="10dp" />


                    <com.google.android.material.chip.Chip
                        android:id="@+id/bike_directions_icon"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:checkable="true"
                        android:checked="false"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:tag="@string/bike"
                        app:checkedIcon="@drawable/ic_baseline_directions_bike_24"
                        app:checkedIconTint="@color/green"
                        app:checkedIconVisible="true"
                        app:chipIcon="@drawable/ic_baseline_directions_bike_24"
                        app:chipIconSize="30dp"
                        app:chipIconTint="@color/black"
                        app:chipIconVisible="true"
                        app:iconEndPadding="10dp"
                        app:iconStartPadding="10dp" />


                </com.google.android.material.chip.ChipGroup>


                <ScrollView
                    android:id="@+id/steps_scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="60dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/chip_group_directions"
                    android:visibility="gone"
                    android:layout_marginBottom="60dp"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_steps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"
                        app:layoutManager="LinearLayoutManager"
                        tools:listitem="@layout/step_item"
                        />

                </ScrollView>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/animation_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                >

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/loading_animation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:tooltipText="Loading information"
                    app:lottie_autoPlay="false"
                    app:lottie_loop="false"
                    app:lottie_rawRes="@raw/loading_map"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:lottie_speed="1"
                    tools:ignore="SpeakableTextPresentCheck" />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/place_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true"
                android:visibility="gone"
                tools:context=".ui.fragments.maps.PlanMapFragment">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/back_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/back_to_plan" />

                <TextView
                    android:id="@+id/place_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/place_divider"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    app:dividerColor="@color/black"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/place_name"
                    app:layout_constraintVertical_bias="0.0" />

                <LinearLayout
                    android:id="@+id/image_list"
                    android:layout_marginTop="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/place_divider"
                    app:layout_constraintVertical_bias="0.0"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/image_recyclerView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="LinearLayoutManager"
                        tools:listitem="@layout/image_item_layout"
                        android:scrollbars="horizontal" />
                </LinearLayout>

                <TextView
                    android:id="@+id/wiki_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:textSize="11sp"
                    android:visibility="visible"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/image_list"
                    app:layout_constraintVertical_bias="0.0"
                    android:contentDescription="@string/information_from_wikipedia"
                    />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/wiki_info"
                    app:layout_constraintVertical_bias="0.0"
                    android:contentDescription="@string/info_image"
                    />

                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:textSize="18sp"
                    android:textColor="@color/purple_700"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/address"
                    app:layout_constraintVertical_bias="0.0"
                    android:contentDescription="@string/info_image"
                    />

                <TextView
                    android:id="@+id/uri_of_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:textSize="18sp"
                    android:textColor="@color/blue"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phone_number"
                    app:layout_constraintVertical_bias="0.0"
                    android:contentDescription="@string/info_image"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/notes_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:context=".ui.fragments.maps.PlanMapFragment"
                >

                <ImageView
                    android:id="@+id/back_button_from_notes"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/back_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/back_to_plan" />


                <LinearLayout
                    android:id="@+id/layout_for_note_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/note"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="56dp"
                        android:layout_marginStart="32dp"
                        android:src="@drawable/note_alt"
                        android:contentDescription="@string/note"
                        />

                    <TextView
                        android:id="@+id/add_note_ifno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="32dp"
                        android:textColor="@color/black"
                        android:text="@string/add_note"
                        android:textSize="22sp"
                        android:textStyle="bold"

                        />
                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/note_divider"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="6dp"
                    app:dividerColor="@color/black"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_for_note_info"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/place_name_note"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/note_divider"
                    app:layout_constraintVertical_bias="0.0"
                    />


                <CheckBox
                    android:id="@+id/reservation_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:text="@string/reservation"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/place_name_note"
                    app:layout_constraintVertical_bias="0.0"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/label_textarea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    android:textAlignment="center"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:overScrollMode="always"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    android:lines="10"
                    android:visibility="visible"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/reservation_check"
                    app:layout_constraintVertical_bias="0.0"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/textarea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#757575"
                        android:hint="@string/add_note_hint"
                        />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/user_name_note"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="8dp"
                    android:hint="@string/user_name"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:visibility="gone"
                    app:startIconDrawable="@drawable/ic_person_24"
                    app:startIconContentDescription="@string/user_name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/reservation_check"
                    app:layout_constraintVertical_bias="0.0"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#757575" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/date_from_layout"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:hint="@string/from"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="4dp"
                        android:visibility="gone"
                        app:startIconDrawable="@drawable/ic_baseline_calendar_month_24"
                        app:startIconContentDescription="@string/from"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="@+id/user_name_note"
                        app:layout_constraintTop_toBottomOf="@+id/user_name_note"
                        app:layout_constraintVertical_bias="0.0"
                        >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/date_from"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#757575" />
                </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/date_to_layout"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:hint="@string/to"
                        android:visibility="gone"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="4dp"
                        app:startIconDrawable="@drawable/ic_baseline_calendar_month_24"
                        app:startIconContentDescription="@string/to"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:layout_constraintEnd_toEndOf="@+id/user_name_note"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintTop_toBottomOf="@+id/user_name_note"
                        app:layout_constraintVertical_bias="0.0"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/date_to"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="#757575" />
                    </com.google.android.material.textfield.TextInputLayout>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/value_layout"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:hint="@string/payment_value"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    app:startIconDrawable="@drawable/ic_baseline_euro_24"
                    app:startIconContentDescription="@string/payment_value"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/date_to_layout"
                    app:layout_constraintVertical_bias="0.0"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/value_of_reservation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColorHint="#757575" />
                </com.google.android.material.textfield.TextInputLayout>



                <Button
                    android:id="@+id/add_note_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="300dp"
                    android:background="@drawable/note_add_icon"
                    android:contentDescription="@string/add_input"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/note_divider"
                    app:layout_constraintVertical_bias="0.0"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/place_wrapper_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true"
                android:visibility="gone"
                tools:context=".ui.fragments.maps.PlanMapFragment">

                <ImageView
                    android:id="@+id/back_to_profile_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/back_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/back_to_plan" />

                <TextView
                    android:id="@+id/details_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="42dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/details_routes_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="150dp"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/details_title"
                    app:layout_constraintVertical_bias="0.0"
                    android:orientation="vertical"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/details_list_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:scrollbars="vertical"
                        app:layoutManager="LinearLayoutManager"
                        tools:listitem="@layout/journey_detail_item" />


                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </FrameLayout>





    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>

