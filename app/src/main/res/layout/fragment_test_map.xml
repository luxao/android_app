<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.maps.TestMapFragment">

    <data>
        <variable
            name="model"
            type="com.example.journey_dp.ui.viewmodel.MapViewModel" />
        <import type="android.view.View"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:id="@+id/search_wrapper"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="@dimen/spacing_middle"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_large"
            app:cardCornerRadius="3dp"
            app:cardElevation="3dp"
            android:clipToPadding="false"
            app:cardUseCompatPadding="false"
            app:layout_collapseMode="parallax"
            android:visibility="visible"
            >

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/autocomplete_fragment"
                android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                android:src="@color/places_autocomplete_search_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp"
                app:iconifiedByDefault="true"

                app:queryHint="Search Here" />

        </androidx.cardview.widget.CardView>



        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/google_map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        <FrameLayout
            android:id="@+id/bottom_sheet_behavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:background="@drawable/rounded"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_remove_24"
                android:scaleType="centerCrop"
                android:layout_gravity="center|top"
                />

            <LinearLayout
                android:id="@+id/layout_for_add_station"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_mxlarge"

                android:layout_marginLeft="@dimen/spacing_mlarge"
                android:layout_marginRight="@dimen/spacing_mlarge"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:src="@drawable/ic_baseline_my_location_24"
                    />

                <View
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="-33dp"
                    android:background="@drawable/ic_baseline_more_vert_24" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/my_location_label"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:visibility="visible"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/my_location_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#757575"
                        android:hint="@string/destination"

                        />
                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:id="@+id/test_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="@dimen/spacing_xmedium"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:background="@drawable/ic_baseline_add_circle_24"
                    android:contentDescription="@string/add_input" />

            </LinearLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:nestedScrollingEnabled="true"
                tools:context=".ui.fragments.maps.TestFragment">

                <ScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/inputs_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="LinearLayoutManager"
                        tools:itemCount="4"
                        tools:listitem="@layout/destination_item" />
                </ScrollView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/finish_button"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/finish_plan"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/scrollView"
                    app:layout_constraintVertical_bias="0.0" />

                <LinearLayout
                    android:id="@+id/information_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/finish_button"
                    app:layout_constraintVertical_bias="0.0"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/totalDistance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:text="@string/test_total_distance_500_km"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/totalDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:text="@string/test_total_duration_25_h"
                        android:textStyle="bold"
                        />

                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/material_divider"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    app:dividerColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/information_layout"
                    app:layout_constraintVertical_bias="0.0" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_directions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    app:chipSpacingHorizontal="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/material_divider"
                    app:selectionRequired="true"
                    app:singleLine="true"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/car_directions_icon"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:checkable="true"
                        android:checked="true"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:tag="@string/car"
                        app:checkedIcon="@drawable/ic_baseline_directions_car_24"
                        app:checkedIconTint="@color/purple_700"
                        app:checkedIconVisible="true"
                        app:chipIcon="@drawable/ic_baseline_directions_car_24"
                        app:chipIconSize="30dp"
                        app:chipIconTint="@color/black"
                        app:chipIconVisible="true"
                        app:iconEndPadding="10dp"
                        app:iconStartPadding="10dp" />


                    <com.google.android.material.chip.Chip
                        android:id="@+id/bus_directions_icon"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:checkable="true"
                        android:checked="false"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:tag="@string/bus"
                        app:checkedIcon="@drawable/ic_baseline_directions_bus_24"
                        app:checkedIconTint="@color/purple_700"
                        app:checkedIconVisible="true"
                        app:chipIcon="@drawable/ic_baseline_directions_bus_24"
                        app:chipIconSize="30dp"
                        app:chipIconTint="@color/black"
                        app:chipIconVisible="true"
                        app:iconEndPadding="10dp"
                        app:iconStartPadding="10dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/train_directions_icon"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:checkable="true"
                        android:checked="false"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:tag="@string/train"
                        app:checkedIcon="@drawable/ic_baseline_directions_transit_filled_24"
                        app:checkedIconTint="@color/purple_700"
                        app:checkedIconVisible="true"
                        app:chipIcon="@drawable/ic_baseline_directions_transit_filled_24"
                        app:chipIconSize="30dp"
                        app:chipIconTint="@color/black"
                        app:chipIconVisible="true"
                        app:iconEndPadding="10dp"
                        app:iconStartPadding="10dp" />


                    <com.google.android.material.chip.Chip
                        android:id="@+id/walk_directions_icon"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:checkable="true"
                        android:checked="false"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:tag="@string/walk"
                        app:checkedIcon="@drawable/ic_baseline_directions_walk_24"
                        app:checkedIconTint="@color/purple_700"
                        app:checkedIconVisible="true"
                        app:chipIcon="@drawable/ic_baseline_directions_walk_24"
                        app:chipIconSize="30dp"
                        app:chipIconTint="@color/black"
                        app:chipIconVisible="true"
                        app:iconEndPadding="10dp"
                        app:iconStartPadding="10dp" />


                    <com.google.android.material.chip.Chip
                        android:id="@+id/bike_directions_icon"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:checkable="true"
                        android:checked="false"
                        android:clickable="true"
                        android:contextClickable="true"
                        android:tag="@string/bike"
                        app:checkedIcon="@drawable/ic_baseline_directions_bike_24"
                        app:checkedIconTint="@color/purple_700"
                        app:checkedIconVisible="true"
                        app:chipIcon="@drawable/ic_baseline_directions_bike_24"
                        app:chipIconSize="30dp"
                        app:chipIconTint="@color/black"
                        app:chipIconVisible="true"
                        app:iconEndPadding="10dp"
                        app:iconStartPadding="10dp" />


                </com.google.android.material.chip.ChipGroup>


                <ScrollView
                    android:id="@+id/steps_scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="60dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/chip_group_directions"
                    android:visibility="gone"
                    android:layout_marginBottom="60dp"
                    >

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView_steps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"
                        app:layoutManager="LinearLayoutManager"
                        tools:listitem="@layout/step_item"
                        />

                </ScrollView>



            </androidx.constraintlayout.widget.ConstraintLayout>



        </FrameLayout>



    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</layout>


