<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.maps.TestMapFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <fragment
            android:id="@+id/google_map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        <FrameLayout
            android:id="@+id/bottom_sheet_behavior"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            android:background="@drawable/rounded"
            >

            <ImageView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_remove_24"
                android:scaleType="centerCrop"
                android:layout_gravity="center|top"
                />

            <LinearLayout
                android:id="@+id/layout_for_add_station"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_mxlarge"
                android:layout_marginBottom="@dimen/spacing_mlarge"
                android:layout_marginLeft="@dimen/spacing_mlarge"
                android:layout_marginRight="@dimen/spacing_mlarge"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="@dimen/spacing_middle"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:src="@drawable/ic_baseline_my_location_24"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="@dimen/spacing_middle"

                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_large"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="3dp"
                    android:clipToPadding="false"
                    app:cardUseCompatPadding="false"
                    app:layout_collapseMode="parallax"
                    android:visibility="gone"
                    >

                    <fragment
                        android:id="@+id/autocomplete_fragment"
                        android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
                        android:src="@color/places_autocomplete_search_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:elevation="5dp"

                        app:iconifiedByDefault="true"
                        app:queryHint="Search Here" />

                </androidx.cardview.widget.CardView>



                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/my_location_label"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:hint="@string/my_location"
                    android:textAlignment="center"
                    app:startIconContentDescription="@string/my_location"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:visibility="visible"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/my_location_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#757575"

                        />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/spacing_middle"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_middle"
                    android:background="@drawable/ic_baseline_menu_24"
                    android:visibility="invisible"
                    />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/spacing_middle"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_middle"
                    android:background="@drawable/ic_person_24"
                    />

            </LinearLayout>

            <View
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginBottom="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/ic_baseline_more_vert_24" />


            <LinearLayout
                android:id="@+id/layout_for_add_stop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="@dimen/spacing_mlarge"
                android:layout_marginLeft="@dimen/spacing_mlarge"
                android:layout_marginRight="@dimen/spacing_mlarge"
                android:orientation="horizontal"

                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="@dimen/spacing_middle"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_large"
                    android:src="@drawable/ic_baseline_mode_of_travel_24"
                    />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/label_stop"
                    android:layout_width="200dp"
                    android:layout_height="60dp"

                    android:hint="@string/destination"
                    android:textAlignment="center"
                    app:startIconContentDescription="@string/destination"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input_stop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textColorHint="#757575"

                        />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/spacing_middle"
                    android:layout_marginLeft="@dimen/spacing_middle"
                    android:layout_marginRight="@dimen/spacing_middle"
                    android:layout_marginTop="@dimen/spacing_middle"
                    android:background="@drawable/ic_baseline_menu_24"
                    />


            </LinearLayout>

            <View
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginBottom="35dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="150dp"
                android:background="@drawable/ic_baseline_more_vert_24" />



            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="200dp"
                app:dividerInsetStart="16dp"
                app:dividerInsetEnd="16dp"/>


        </FrameLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>




</layout>